<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        tools:context=".ProfileFragment"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/profileNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/ic_navigation_back">
            </ImageView>


            <TextView
                android:id="@+id/profileTitleTextView"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:layout_weight="1"
                android:text="My Account"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />


        </LinearLayout>


        <ProgressBar
            android:id="@+id/avatarProgressBar"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="30dp"
            android:visibility="invisible"/>


        <EditText
            android:id="@+id/profileFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:textColorHint="@color/dark_blue_gray"
            android:textColor="@color/dark_black"
            android:hint="First name"
            android:textSize="15sp" />



        <EditText
            android:id="@+id/profileLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_default"
            android:textColorHint="@color/dark_blue_gray"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/lato"
            android:layout_marginTop="15dp"
            android:hint="Last name"
            android:textSize="15sp" />



        <EditText
            android:id="@+id/profileEmailAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:textColorHint="@color/dark_blue_gray"
            android:textColor="@color/dark_black"
            android:hint="Email address"
            android:layout_marginTop="15dp"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profilePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_default"
            android:textColorHint="@color/dark_blue_gray"
            android:textColor="@color/dark_black"
            android:fontFamily="@font/lato"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/profileUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_purple" />

            <Button
                android:id="@+id/profileCancelUpdateBtn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:textColor="@color/dark_black"
                android:text="Cancel"
                android:background="@drawable/primary_button"
                android:textAllCaps="false"

                app:backgroundTint="@color/white" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/profileProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible">

        </ProgressBar>



    </LinearLayout>
