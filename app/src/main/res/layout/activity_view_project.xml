<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/toolbar_gradient_bg"
    tools:context=".ViewProjectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/viewProjectAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:stateListAnimator="@null"
        android:fitsSystemWindows="true"
        >

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/viewProjectCollapsingToolbarLayout"
        app:expandedTitleTextColor="@color/white"
        app:collapsedTitleTextColor="@color/white"
        app:title="My project"

        app:contentScrim="?attr/colorPrimary"
        android:background="@drawable/toolbar_gradient_bg"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_logo_white"
            app:layout_collapseMode="parallax" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/viewProjectToolBar"
            android:layout_width="match_parent"
            android:theme="@style/PurpleActionBar"
            app:layout_collapseMode="pin"
            android:layout_height="?attr/actionBarSize"/>



    </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/toolbar_scrollview_rounded_layout_bg"
        android:padding="25dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userAvatarImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_user_avatar_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profileTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:text="Created by John Doe"
                        android:textColor="@color/dark_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/profileTitleTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.01"
                        android:text="Project owner"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/profileTitleTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.01"
                        android:text="27/11/20"
                        android:textColor="@color/dark_black"
                        android:textSize="13sp" />


                </LinearLayout>






            </LinearLayout>


            <TextView
                android:id="@+id/viewProjectDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:letterSpacing="-0.03"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue_gray"
                android:textSize="15sp" />

<!--            <Button-->
<!--                android:id="@+id/loginBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="28dp"-->
<!--                android:background="@drawable/primary_button"-->
<!--                android:fontFamily="@font/roboto_bold"-->
<!--                android:letterSpacing="-0.01"-->
<!--                android:stateListAnimator="@null"-->
<!--                android:text="@string/cancel"-->
<!--                android:textAllCaps="false"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="15sp" />-->

        </LinearLayout>





    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
