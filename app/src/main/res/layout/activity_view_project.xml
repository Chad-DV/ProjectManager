<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:context=".ViewProjectActivity"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/viewProjectThumbnailImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/project_large_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">



            <ImageView
                android:id="@+id/viewProjectNavigationBack"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_navigation_back_light" />


            <TextView
                android:id="@+id/viewProjectTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:text="Create an account"
                android:layout_marginTop="300dp"
                android:textColor="@color/dark_black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/viewProjectDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:letterSpacing="-0.01"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor rhoncus dolor purus non enim praesent elementum facilisis leo."
                android:textColor="@color/dark_blue_gray"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewProjectDateCreatedTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="-0.01"

                    android:text="Date created: "
                    android:textColor="@color/dark_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/viewProjectDateCreatedTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="30dp"

                    android:letterSpacing="-0.01"
                    android:text="22-04-2022"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewProjectDateDueTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="30dp"
                    android:letterSpacing="-0.01"

                    android:text="Date due:"
                    android:textColor="@color/dark_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/viewProjectDateDueTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="30dp"

                    android:letterSpacing="-0.01"
                    android:text="22-04-2022"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewProjectPriorityTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="30dp"
                    android:letterSpacing="-0.01"

                    android:text="Priority:"
                    android:textColor="@color/dark_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/viewProjectPriorityTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="30dp"

                    android:letterSpacing="-0.01"
                    android:text="High"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewProjectChecklistTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="30dp"
                    android:letterSpacing="-0.01"

                    android:text="Priority:"
                    android:textColor="@color/dark_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/viewProjectChecklistTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="30dp"

                    android:letterSpacing="-0.01"
                    android:text="High"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
