<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProjectFragment"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/loginTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_weight="1"
                    android:letterSpacing="-0.03"
                    android:text="My projects"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sortProjectsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_gravity="center"
                    android:letterSpacing="-0.03"
                    android:text="Sort by"
                    android:drawableRight="@drawable/ic_sort_icon"
                    android:drawablePadding="5dp"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="12sp" />


            </LinearLayout>


            <ProgressBar
                android:id="@+id/projectListLoadingProgressBar"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_height="match_parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/projectRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:foregroundGravity="center" />


        </LinearLayout>






</ScrollView>