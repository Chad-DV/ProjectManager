<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ProjectFragment"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_card_background"
            android:layout_height="190dp"
            android:padding="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/welcomeUserTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_black"
                    android:letterSpacing="-0.01"
                    android:text="Welcome wwb2ack"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/projectAddBtn1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:fontFamily="@font/lato_black"
                    android:letterSpacing="-0.01"
                    android:text="Add new"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_purple"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/welcomeUserTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="-0.01"
                android:text="You currently have 5 projects"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/searchProjectEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_input"
                android:drawableLeft="@drawable/ic_search_icon"
                android:drawablePadding="15sp"
                android:fontFamily="@font/lato"
                android:hint="Search for a project"
                android:letterSpacing="-0.01"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="16sp" />



        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/loginTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_weight="1"
                    android:letterSpacing="-0.03"
                    android:text="My projects"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sortProjectsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:layout_gravity="center"
                    android:letterSpacing="-0.03"
                    android:text="Sort by"
                    android:drawableRight="@drawable/ic_sort_icon"
                    android:drawablePadding="5dp"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="12sp" />


            </LinearLayout>


            <ProgressBar
                android:id="@+id/projectListLoadingProgressBar"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_height="match_parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/projectRecyclerView"
                android:layout_width="match_parent"
                android:foregroundGravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />




        </LinearLayout>




    </LinearLayout>

</ScrollView>