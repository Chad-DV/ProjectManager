
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emptyProjectListLinearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="40dp"
        android:padding="50dp"
        android:gravity="center"
        android:orientation="vertical">



            <ProgressBar
                android:id="@+id/projectListLoadingProgressBar"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/d32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textFontWeight="600"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="You currently have no projects to manage"
                android:textAlignment="center"
                android:lineHeight="27dp"
                android:textColor="@color/dark_black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/d33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:layout_marginTop="-2dp"

                android:textAlignment="center"
                android:text="Create your first project and get started!"
                android:textColor="@color/dark_blue_gray"
                android:textSize="13sp" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_empty_project_list_illustration"/>

    </LinearLayout>

