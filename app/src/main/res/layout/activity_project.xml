<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"

            android:background="@drawable/gradient_card_background"
            android:orientation="vertical"
            android:padding="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/welcomeUserTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="-0.02"
                    android:text="Welcome john"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/projectAddBtn1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"

                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="-0.01"
                    android:stateListAnimator="@null"
                    android:text="Add new"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_purple"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/displayUserProjectCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/roboto"
                android:letterSpacing="-0.01"
                android:text="You have 4 projects"
                android:textColor="@color/light_blue_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/filterProjectEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/search_input"
                android:drawableRight="@drawable/ic_search_icon"
                android:drawablePadding="15sp"
                android:fontFamily="@font/roboto"
                android:hint="Search for a project..."
                android:letterSpacing="-0.01"
                android:textColor="@color/white"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="15sp">


            </EditText>


        </LinearLayout>


        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:padding="20dp">-->

        <!--  -->

        <!--        </LinearLayout>-->


        <FrameLayout
            android:id="@+id/projectFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView"
                android:layout_width="match_parent"
                android:backgroundTint="@color/dark_blue_gray"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:itemTextColor="@color/dark_black"
                app:itemIconTint="@color/primary_purple"
                app:menu="@menu/nav_menu" />
        </LinearLayout>


    </RelativeLayout>


