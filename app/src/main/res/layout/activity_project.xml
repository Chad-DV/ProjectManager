<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"

            android:background="@drawable/purple_card_background"
            android:orientation="vertical"
            android:padding="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeUserTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="17"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_flex"
                        android:textFontWeight="600"
                        android:letterSpacing="-0.02"
                        android:text="Hello"

                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/displayUserProjectCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"

                        android:fontFamily="@font/roboto_flex"
                        android:letterSpacing="-0.01"
                        android:text="You currently have 0 project(s)"
                        android:textColor="@color/light_blue_gray"
                        android:textSize="14sp" />

                </LinearLayout>



                <Button
                    android:id="@+id/projectAddBtn"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:drawableStart="@drawable/ic_add_icon"
                    android:drawableTint="@color/primary_purple"
                    android:background="@drawable/search_input"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/roboto_flex"
                    android:layout_gravity="center"
                    android:letterSpacing="-0.01"
                    android:textFontWeight="600"
                    android:stateListAnimator="@null"
                    android:text="Add new"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_purple"
                    android:textSize="13sp" />
            </LinearLayout>



            <EditText
                android:id="@+id/filterProjectEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/search_input"
                android:drawableRight="@drawable/ic_search_icon"
                android:drawablePadding="15sp"
                android:fontFamily="@font/roboto_flex"
                android:hint="Search for a project..."
                android:letterSpacing="-0.01"
                android:textColor="@color/white"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="14sp">


            </EditText>


        </LinearLayout>


        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:padding="20dp">-->

        <!--  -->

        <!--        </LinearLayout>-->


        <FrameLayout
            android:id="@+id/projectFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">



            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavView"
                android:layout_width="match_parent"
                android:backgroundTint="@color/dark_blue_gray"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:itemTextColor="@color/dark_black"
                app:itemIconTint="@color/primary_purple"
                app:menu="@menu/nav_menu" />
        </LinearLayout>

=

    </RelativeLayout>


