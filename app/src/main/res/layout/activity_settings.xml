<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settingsNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/ic_navigation_back" />


            <TextView
                android:id="@+id/settingsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:text="@string/settings"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/settingsProfileCardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_outline"
                android:elevation="0dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/settingsUserImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_user_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/settingsProfileTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:text="Profile"
                        android:textColor="@color/dark_black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/settingsProfileDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.01"
                        android:text="Settings related to your account  and profile details"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settingsMyProjectsCardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_outline"
                android:elevation="0dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/settingsProjectImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_project_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/settingsProjectTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:text="My Projects"
                        android:textColor="@color/dark_black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/settingsProjectDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.01"
                        android:text="View your projects"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settingsLogoutCardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_outline"
                android:elevation="0dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/settingsLogoutImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_logout_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/settingsLogoutTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:text="Logout"
                        android:textColor="@color/dark_black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/settingsLogoutDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.01"
                        android:text="Logout of your account"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/dark_blue_gray"
            app:itemIconTint="@color/primary_purple"
            app:itemTextColor="@color/dark_black"
            app:menu="@menu/nav_menu" />
    </LinearLayout>


</RelativeLayout>