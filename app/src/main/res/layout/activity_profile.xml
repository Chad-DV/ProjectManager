<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="23dp"

                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/ic_navigation_back"></ImageView>


            <TextView
                android:id="@+id/profileTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:text="My Account"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />


        </LinearLayout>



        <ProgressBar
            android:id="@+id/avatarProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/profileFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:hint="First name"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profileLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:hint="Last name"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profileEmailAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:hint="Email address"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profilePasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/lato"
            android:hint="Password"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/profileUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary_purple" />

            <Button
                android:id="@+id/profileCancelUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="-0.01"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/dark_black"

                app:backgroundTint="@color/white" />


        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/dark_blue_gray"
            app:itemIconTint="@color/primary_purple"
            app:itemTextColor="@color/dark_black"
            app:menu="@menu/nav_menu" />
    </LinearLayout>


</RelativeLayout>
