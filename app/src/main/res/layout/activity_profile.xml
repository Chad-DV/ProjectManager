<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="23dp"

                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_navigation_back" />


            <TextView
                android:id="@+id/profileTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:text="@string/my_profile"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/profileMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dotted_menu"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/avatarProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/userAvatarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_user_avatar_default" />

        <TextView
            android:id="@+id/changeUserAvatarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/roboto"
            android:letterSpacing="-0.01"
            android:text="@string/change"
            android:textAlignment="center"
            android:textColor="@color/dark_blue_gray"
            android:textSize="11sp" />


        <EditText
            android:id="@+id/profileFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/roboto"
            android:hint="First name"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profileLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/roboto"
            android:hint="Last name"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/profileEmailAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_default"
            android:fontFamily="@font/roboto"
            android:hint="Email address"
            android:textColor="@color/dark_black"
            android:textColorHint="@color/dark_blue_gray"
            android:textSize="15sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:hint=" "
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/dark_blue_gray">


            <EditText
                android:id="@+id/profilePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_default"
                android:fontFamily="@font/roboto"
                android:hint="Password"
                android:inputType="textPassword"
                android:letterSpacing="-0.01"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--        <EditText-->
        <!--            android:id="@+id/profilePasswordEditText"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:background="@drawable/input_default"-->
        <!--            android:fontFamily="@font/roboto"-->
        <!--            android:hint="Password"-->
        <!--            android:textColor="@color/dark_black"-->
        <!--            android:textColorHint="@color/dark_blue_gray"-->
        <!--            android:textSize="15sp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/profileUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:backgroundTint="@color/primary_purple" />

            <Button
                android:id="@+id/profileCancelUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/dark_black"
                android:textSize="16dp"
                app:backgroundTint="@color/white" />


        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/dark_blue_gray"
            app:itemIconTint="@color/primary_purple"
            app:itemTextColor="@color/dark_black"
            app:menu="@menu/nav_menu" />
    </LinearLayout>


</RelativeLayout>