<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".ProfileFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/addProjectNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_navigation_back"></ImageView>


            <TextView
                android:id="@+id/addProjectTitleTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Add a project"
                android:textAlignment="center"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/rer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project title"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="11sp" />


            <EditText
                android:id="@+id/addProjectTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_outline"
                android:fontFamily="@font/roboto_flex"
                android:hint="Project title"
                android:paddingLeft="15dp"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/re3r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project description"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="11sp" />


            <EditText
                android:id="@+id/addProjectDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_outline"
                android:fontFamily="@font/roboto_flex"
                android:hint="Project description"
                android:paddingLeft="15dp"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/re333r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project due date"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addProjectDueDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_outline"
                android:editable="false"
                android:fontFamily="@font/roboto_flex"
                android:hint="Select due date"
                android:paddingLeft="15dp"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="13sp"
                tools:ignore="Deprecated" />


            <TextView
                android:id="@+id/fe44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project due time"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addProjectTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_outline"
                android:editable="false"
                android:fontFamily="@font/roboto_flex"
                android:hint="Project due time"
                android:paddingLeft="15dp"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_blue_gray"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/addProjectRemindMeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Remind me"
                android:textAlignment="textStart"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/addProjectRemindMeDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Send a notification when a project is closing on a due date"
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue_gray"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/addProjectRemindMe2WeeksCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_purple"
                android:buttonTint="@color/primary_purple"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="2 weeks before"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/addProjectRemindMe1WeekCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_purple"
                android:buttonTint="@color/primary_purple"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="@string/remindMe1Week"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/addProjectRemindMe1DayCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_purple"
                android:buttonTint="@color/primary_purple"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="@string/remindMe1Day"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/addProjectRemindMe1HourCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_purple"
                android:buttonTint="@color/primary_purple"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="@string/remindMe1Hour"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/addProjectRemindMe30MinutesCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_purple"
                android:buttonTint="@color/primary_purple"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="@string/remindMe30Minutes"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/addProjectPriorityTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project priority"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/addProjectPriorityDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Shows the urgency of the project"
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue_gray"
                android:textSize="12sp" />


            <RadioGroup
                android:id="@+id/addProjectPriorityRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/projectPriorityHighRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_purple"
                    android:buttonTint="@color/primary_purple"
                    android:checked="true"
                    android:text="High"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/projectPriorityMediumRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_purple"
                    android:buttonTint="@color/primary_purple"
                    android:text="Medium"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/projectPriorityLowRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_purple"
                    android:buttonTint="@color/primary_purple"
                    android:text="Low"
                    android:textSize="13sp" />

            </RadioGroup>


            <TextView
                android:id="@+id/addProjectChecklistTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Project checklist"
                android:textColor="@color/dark_black"
                android:textFontWeight="600"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/addProjectChecklistDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:text="Create a checklist of items to easily track your progress"
                android:textColor="@color/dark_blue_gray"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">


                <EditText
                    android:id="@+id/addProjectChecklistEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_outline"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="Add item"
                    android:letterSpacing="0.01"
                    android:paddingLeft="15dp"
                    android:textColor="@color/dark_black"
                    android:textColorHint="@color/dark_blue_gray"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/addProjectChecklistBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_checklist_add" />

            </LinearLayout>

            <ListView
                android:id="@+id/addProjectChecklistListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:divider="@null"
                android:dividerHeight="0dp"

                android:stateListAnimator="@null" />


            <Button
                android:id="@+id/addProjectBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/primary_button"
                android:fontFamily="@font/roboto_flex"
                android:letterSpacing="-0.01"
                android:paddingRight="10dp"
                android:stateListAnimator="@null"
                android:text="Add project"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>