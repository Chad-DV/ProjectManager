        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@drawable/card_vector"
            android:layout_marginBottom="8dp"
            android:padding="8dp">


    <ImageView
        android:id="@+id/scheduleThumbnailImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/project_cover" />

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/projectListTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="-0.03"
                    android:layout_marginRight="30dp"
                    android:maxLines="1"
                    android:text="My projects"
                    android:ellipsize="end"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectListDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:lineHeight="12dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="-0.03"
                        android:maxLines="2"
                        android:text="Lorem ipsum dolor sit amet, conLorem ipsum dolor sit amet, consectetur adisectetur adipisci ng eleee"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_right_soft" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/projectDueStatusInfoBtn"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:background="@drawable/project_card_small_button"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:text="Not started"
                        android:stateListAnimator="@null"
                        android:textAlignment="center"

                        android:textAllCaps="false"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/projectPriorityInfoBtn"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/project_card_small_button"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:stateListAnimator="@null"
                        android:text="High priority"
                        android:textAlignment="center"
                        android:textAllCaps="false"

                        android:textSize="11sp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    <!--</RelativeLayout>-->
