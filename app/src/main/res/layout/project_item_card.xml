<androidx.cardview.widget.CardView
    android:background="@drawable/card_vector"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="-2dp"
    app:cardCornerRadius="9dp"

    >


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/scheduleThumbnailImageView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:background="@drawable/project_cover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/projectListTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:letterSpacing="-0.03"
                    android:layout_marginRight="30dp"
                    android:maxLines="1"
                    android:text="My projects"
                    android:ellipsize="end"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectListDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="-0.03"
                        android:maxLines="2"
                        android:text="Lorem ipsum dolor sit amet, conLorem ipsum dolor sit amet, consectetur adisectetur adipisci ng eleee"
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right_soft" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/projectDueStatusInfoBtn"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@color/dark_red"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:text="Not started"
                        android:textAlignment="center"
                        android:elevation="0dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/projectPriorityInfoBtn"
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@color/dark_black"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:text="High priority"
                        android:textAlignment="center"
                        android:elevation="0dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


</androidx.cardview.widget.CardView>


