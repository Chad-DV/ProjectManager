<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/project_item_card_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/scheduleThumbnailImageView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/projectListTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_flex"
                android:textFontWeight="600"
                android:letterSpacing="-0.03"
                android:maxLines="1"
                android:text="My projects"
                android:textAlignment="textStart"
                android:textColor="@color/dark_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/projectListDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:lineHeight="14dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_flex"
                    android:letterSpacing="-0.03"
                    android:maxLines="2"
                    android:text="Lorem ipsum dolor sit amet, conLorem ipsum dolor sit amet, consectetur adisectetur adipisci ng eleee"
                    android:textColor="@color/dark_blue_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right_soft" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:elevation="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/projectDueStatusInfoBtn"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:background="@drawable/project_card_small_button"
                    android:fontFamily="@font/roboto_flex"
                    android:text="Not started"
                    android:stateListAnimator="@null"
                    android:textAlignment="center"
                    android:textFontWeight="600"
                    android:textAllCaps="false"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/projectPriorityInfoBtn"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/project_card_small_button"
                    android:fontFamily="@font/roboto_flex"

                    android:stateListAnimator="@null"
                    android:text="High priority"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textFontWeight="600"
                    android:textSize="11sp" />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
