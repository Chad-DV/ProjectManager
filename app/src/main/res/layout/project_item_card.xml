<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/project_item_card_shadow"
    android:padding="15dp"

    android:layout_marginBottom="5dp"
    >



            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/scheduleThumbnailImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/project_cover_image_1" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/projectListTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"

                    android:letterSpacing="-0.03"
                    android:text="My projects"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectListDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="-0.03"
                        android:maxLength="90"
                        android:maxLines="1"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipisci ng elit ut aliquam, purus sit amet luctus venenatis."
                        android:textColor="@color/dark_blue_gray"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_right_soft" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/projectDueStatusInfoBtn"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:text="Not started"
                        android:elevation="0dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/projectPriorityInfoBtn"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:elevation="0dp"
                        android:text="High priority"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_red"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>










</LinearLayout>