<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"


    app:cardCornerRadius="9dp"

    >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="12dp">


            <ImageView
                android:id="@+id/scheduleThumbnailImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/project_cover_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/projectListTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:letterSpacing="-0.03"
                    android:text="My projects"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_black"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectListDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato"
                        android:letterSpacing="-0.03"
                        android:maxLines="1"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipisci ng eleee"
                        android:textColor="@color/dark_blue_gray"
                        android:layout_marginRight="20dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right_soft" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:elevation="0dp"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/projectDueStatusInfoBtn"
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@color/dark_red"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:text="Not started"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/projectPriorityInfoBtn"
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@color/light_red"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:text="High Priority"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_red"
                        android:textSize="12sp" />


<!--                                       <Button
                        android:id="@+id/projectPriorityInfoBtn"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/project_card_small_button"
                        android:backgroundTint="@color/light_red"
                        android:fontFamily="@font/lato_bold"
                        android:letterSpacing="-0.01"
                        android:elevation="0dp"
                        android:text="High priority"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_red"
                        android:textSize="12sp" />-->

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


</androidx.cardview.widget.CardView>


